<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="金针菇的“神奇力量”：这家公司轻松赚了1个亿"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_1"
        android:src="@drawable/a"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="H,16:10"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_2"
        app:layout_constraintHorizontal_weight="1"
        />
    <ImageView
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintDimensionRatio="H,16:10"
        android:scaleType="fitXY"
        android:id="@+id/iv_2"
        android:src="@drawable/b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/iv_1"
        app:layout_constraintRight_toLeftOf="@id/iv_3"
        app:layout_constraintHorizontal_weight="1"
        />
    <ImageView
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_3"
        android:src="@drawable/c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/iv_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="H,16:10"
        />

    <TextView
        android:id="@+id/media_name"
        android:textColor="@color/gray_black"
        android:textSize="14sp"
        android:text="每日经济新闻"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_1"
        />
    <TextView
        android:id="@+id/comment_count"
        android:textColor="@color/gray_black"
        android:textSize="14sp"
        android:text="1评论"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_2"
        app:layout_constraintLeft_toRightOf="@id/media_name"
        />
    <TextView
        android:textColor="@color/gray_black"
        android:textSize="14sp"
        android:text="52分钟前"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/iv_3"
        app:layout_constraintLeft_toRightOf="@id/comment_count"
        />

    <View
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/media_name"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"
        />
</android.support.constraint.ConstraintLayout>